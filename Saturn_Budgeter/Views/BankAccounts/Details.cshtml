@model Saturn_Budgeter.Models.BankAccount
@using Saturn_Budgeter.Models

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>BankAccount</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Household
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Household.Name)
        </dd>

        <dt>
            Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Balance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Balance)
        </dd>

    </dl>
    <p>Transactions</p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>Reconciled</th>
                <th>Void</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Transaction transaction in Model.Transactions)
            {
                <tr>
                    <td>@transaction.Id</td>
                    <td>@transaction.Name</td>
                    <td>@transaction.Amount</td>
                    @if (transaction.Reconciled)
                    {
                        <td>Yes</td>
                    }
                    else
                    {
                        <td>No</td>
                    }
                    @if (transaction.Void)
                    {
                        <td>Yes</td>
                    }
                    else
                    {
                        <td>No</td>
                    }
                    <td>
                        @Html.ActionLink("Void", "Void", "Transactions", new { id = transaction.Id}, null)
                        @Html.ActionLink("Edit", "Edit", "Transactions", new { id = transaction.Id }, null)
                        @Html.ActionLink("Details", "Details", "Transactions", new { id = transaction.Id }, null)
                        @Html.ActionLink("Delete", "Delete", "Transactions", new { id = transaction.Id }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("New Transaction", "Create", "Transactions", new { id = Model.Id }, null)
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
