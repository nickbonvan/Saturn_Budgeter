@model Saturn_Budgeter.Models.Household
@using Saturn_Budgeter.Models;
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Household</h4>
    <hr />
    <dl class="dl-horizontal">
        <dd>@Model.Id</dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Updated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Updated)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Users
        </dt>

        <dd>
            @foreach (ApplicationUser user in Model.Users)
            {
                @Html.DisplayFor(u => user.DisplayName)
            }
        </dd>

        <dt>
            Accounts
        </dt>

        <dd>
            @foreach(BankAccount account in Model.Accounts)
            {
                @Html.DisplayFor(model => account.Name)
            }
        </dd>
        <dt>
            Invitations Sent to
        </dt>
        <dd>
            @foreach(Invitation invitation in Model.Invitations)
            {
                @Html.DisplayFor(model => invitation.Id)
            }
        </dd>
    </dl>
<p>
    @Html.ActionLink("Send an invitation", "Invite", "Invitations", routeValues: new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary"})
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
