        <tbody>
            @foreach (BudgetItem item in Model.BudgetItems)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Value</td>
                    <td>@item.Created</td>
                    @if (item.Updated.GetValueOrDefault() != new DateTimeOffset())
                    {
                        <td>@item.Updated.GetValueOrDefault().LocalDateTime</td>
                    }
